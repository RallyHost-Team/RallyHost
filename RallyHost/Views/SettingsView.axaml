<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:RallyHost.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RallyHost.SettingsView"
             x:DataType="vm:SettingsViewModel">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:SettingsViewModel/>
    </Design.DataContext>
    <StackPanel>
        
        <Expander VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="16" x:Name="FrpExpander" Margin="5">
            <Expander.Header>
                Frp
            </Expander.Header>
            
            <Grid RowDefinitions="Auto, Auto, Auto, Auto" ColumnDefinitions="*, *, *, *, *" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <TextBlock Grid.Row="0" Grid.Column="0" Margin="1, 5, 1, 1" Name="OpenFrp" FontSize="18" FontWeight="Bold" Text="OpenFrp" VerticalAlignment="Center"></TextBlock>
                <Button Grid.Row="0" Grid.Column="1" Margin="5" Name="OpenFrpToken" Content="Token" HorizontalAlignment="Stretch" VerticalAlignment="Center" HorizontalContentAlignment="Center" ></Button>
                <Button Grid.Row="0" Grid.Column="2" Margin="5" Name="OpenFrpRefresh" Content="Refresh" HorizontalAlignment="Stretch" VerticalAlignment="Center" HorizontalContentAlignment="Center"></Button>
                <Button Grid.Row="0" Grid.Column="3" Margin="5" Name="OpenFrpPing" Content="Ping" HorizontalAlignment="Stretch" VerticalAlignment="Center" HorizontalContentAlignment="Center"></Button>
                <ListBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Margin="1, 1, 1, 1" Name="OpenFrpSelection" FontSize="18" FontWeight="Bold" SelectionMode="Single,Toggle">Test</ListBox>
                
                <TextBlock Grid.Row="2" Grid.Column="0" Margin="1, 5, 1, 1" Name="CustomFrp" FontSize="18" FontWeight="Bold" Text="CustomFrp" VerticalAlignment="Center"></TextBlock>
                <Button Grid.Row="2" Grid.Column="1" Margin="5" Name="CustomFrpAdd" Content="Add" HorizontalAlignment="Stretch" VerticalAlignment="Center" HorizontalContentAlignment="Center"></Button>
                <Button Grid.Row="2" Grid.Column="2" Margin="5" Name="CustomFrpEdit" Content="Edit" HorizontalAlignment="Stretch" VerticalAlignment="Center" HorizontalContentAlignment="Center"></Button>
                <Button Grid.Row="2" Grid.Column="3" Margin="5" Name="CustomFrpDelete" Content="Delete" HorizontalAlignment="Stretch" VerticalAlignment="Center" HorizontalContentAlignment="Center"></Button>
                <Button Grid.Row="2" Grid.Column="4" Margin="5" Name="CustomFrpPing" Content="Ping" HorizontalAlignment="Stretch" VerticalAlignment="Center" HorizontalContentAlignment="Center"></Button>
                <ListBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" Margin="1, 5, 1, 1" Name="CustomFrpSelection" FontSize="18" FontWeight="Bold" SelectionMode="Single,Toggle">Test2</ListBox>
            </Grid>
            
        </Expander>
        
        <Expander VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="16" x:Name="SyncExpander" BorderThickness="0" Margin="5">
            <Expander.Header>
                Sync
            </Expander.Header>
            <Grid RowDefinitions="Auto, Auto, Auto, Auto" ColumnDefinitions="Auto, Auto, Auto" Margin="0, 0, 0, 0">
            </Grid>
        </Expander>
        
        <Expander VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="16" x:Name="Other" BorderThickness="0" Margin="5">
            <Expander.Header>
                Other
            </Expander.Header>
            <Grid RowDefinitions="Auto, Auto, Auto, Auto" ColumnDefinitions="Auto, Auto, Auto" Margin="0, 0, 0, 0">
            </Grid>
        </Expander>
        
    </StackPanel>
</UserControl>
